= form_for(@bar) do |f|
  - if @bar.errors.any?
    #error_explanation
      %h2
        = pluralize(@bar.errors.count, "error")
        prohibited this bar from being saved:
      %ul
        - @bar.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :area
    %br/
    = f.text_field :area
  .field
    = f.label :type
    %br/
    = f.text_field :type
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :website
    %br/
    = f.text_field :website
  .actions
    = f.submit
