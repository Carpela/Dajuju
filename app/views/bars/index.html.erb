<h1>Listing bars</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Area</th>
    <th>Type</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Website</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bars.each do |bar| %>
  <tr>
    <td><%= bar.name %></td>
    <td><%= bar.area %></td>
    <td><%= bar.type %></td>
    <td><%= bar.address %></td>
    <td><%= bar.phone %></td>
    <td><%= bar.website %></td>
    <td><%= link_to 'Show', bar %></td>
    <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
    <td><%= link_to 'Destroy', bar, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

